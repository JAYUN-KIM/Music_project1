[Unit]
Description=MinIO
After=network-online.target

[Service]
User={{ admin_user }}
Group={{ admin_user }}
Environment="MINIO_ROOT_USER={{ minio_root_user }}"
Environment="MINIO_ROOT_PASSWORD={{ minio_root_password }}"
# 이 줄을 수정합니다: --address ":9000" 추가
ExecStart=/usr/local/bin/minio server {{ minio_data_path }} --address ":9000" --console-address ":9001"
Restart=always

[Install]
WantedBy=multi-user.target
